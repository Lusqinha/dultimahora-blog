<% content_for :title, "Posts" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <% if authenticated? %>
      <%= link_to "Novo Post", new_post_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="posts" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="p-5 bg-white rounded-md shadow-lg md:w-2/3 mx-auto">
          <div class="flex justify-between items-center">
            <h2 class="font-bold text-2xl"><%= link_to post.title, post_path(post) %></h2>
            <p class="text-gray-500"><%= time_ago_in_words(post.created_at) %> atr√°s</p>
          </div>
          <p class="mt-3"><%= truncate(strip_tags(post.content), length: 200) %></p>
          <div class="mt-5">
            <%= link_to "Ler mais", post_path(post), class: "text-blue hover:underline" %>
          </div>
        </div>              
      <% end %>
    <% else %>
      <p class="text-center my-10">No posts found.</p>
    <% end %>
  </div>
</div>
